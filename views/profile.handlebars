<div class="row">
  <div class="col-auto">

    <h2 id="userName">Welcome, {{user_name}}!</h2>

  </div>
</div>

  {{#if characters.length}}
  <div class="col-md-10 character-list">
    <h3 id="currcharlist">Current character:</h3>

    {{#each characters as |character|}}
    <div class="row mb-2">
      <div class="col-md-6">
        <h4><a href="/character/{{character.id}}">{{character.character_name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{character.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>

  <div>
  <a href="/create"><button class="btn btnlg btn-success" id="createbutton">Create</button></a>
  </div>

</div>

  {{/if}}
</div>
<script src="./js/profile.js"></script>
