            <input class="form-input" type="text" id="dex" />
        </div>
         <div class="form-group">
            <label for="chr" width="200px" class="createformlabel">Chr:</label>
            <input class="form-input" type="text" id="chr" />
        </div>
         <div class="form-group">
            <label for="const" width="200px" class="createformlabel">Const:</label>
            <input class="form-input" type="text" id="const" />
        </div>
         <div class="form-group">
            <label for="int" width="200px" class="createformlabel">Int:</label>
            <input class="form-input" type="text" id="int" />
        </div>
         <div class="form-group">
            <label for="wis" width="200px" class="createformlabel">Wis:</label>
            <input class="form-input" type="text" id="wis" />
